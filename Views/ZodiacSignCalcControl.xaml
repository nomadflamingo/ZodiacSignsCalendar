<UserControl x:Class="ZodiacSignsCalendar.Views.ZodiacSignCalcControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZodiacSignsCalendar.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
        <DatePicker Grid.Row="0" SelectedDate="{Binding BirthDate, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"></DatePicker>
        <Button Grid.Row="1" Content="Submit" Command="{Binding CalculateZodiacSignCommand}"/>
        <StackPanel Grid.Row="2">
            <TextBlock Text="{Binding AgeMessage, Mode=OneWay}" FontSize="14" Margin="0,5,0,5" />
            <TextBlock Text="{Binding WesternZodiacMessage, Mode=OneWay}" FontSize="14" Margin="0,5,0,5" />
            <TextBlock Text="{Binding ChineseZodiacMessage, Mode=OneWay}" FontSize="14" Margin="0,5,0,5" />
            <TextBlock Text="{Binding BirthdayMessage, Mode=OneWay}" FontSize="14" Margin="0,5,0,5" />
        </StackPanel>
    </Grid>
</UserControl>
